{
  "compilerOptions": {
    "sourceRoot": ".",
    "sourceMap": true,
    "experimentalDecorators": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./",
    "jsx": "react",
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "typeRoots": ["../node_modules/@types", "./types"]
  },
  "include": ["./**/*"],
  "exclude": ["./scripts"]
}
