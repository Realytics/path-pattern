{
  "compilerOptions": {
    "sourceRoot": "./src",
    "sourceMap": true,
    "experimentalDecorators": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./",
    "jsx": "react",
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": ["./src/**/*"]
}
